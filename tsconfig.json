{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata",
      "mocha",
      "node"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "rootDirs": [
      "src",
      "tests"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
